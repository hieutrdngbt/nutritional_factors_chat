{
  "name": "full-stack-app",
  "version": "1.0.0",
  "description": "Full-stack application with NestJS backend and React Vite frontend",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
    "dev:backend": "cd backend && yarn dev",
    "dev:frontend": "cd frontend && yarn dev",
    "build": "yarn build:backend && yarn build:frontend",
    "build:backend": "cd backend && yarn build",
    "build:frontend": "cd frontend && yarn build",
    "test": "yarn test:backend && yarn test:frontend",
    "test:backend": "cd backend && yarn test",
    "test:frontend": "cd frontend && yarn test",
    "lint": "yarn lint:backend && yarn lint:frontend",
    "lint:backend": "cd backend && yarn lint",
    "lint:frontend": "cd frontend && yarn lint",
    "typecheck": "yarn typecheck:backend && yarn typecheck:frontend",
    "typecheck:backend": "cd backend && yarn typecheck",
    "typecheck:frontend": "cd frontend && yarn typecheck",
    "install:all": "yarn install && cd backend && yarn install && cd ../frontend && yarn install",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules backend/dist frontend/dist",
    "postinstall": "cd backend && yarn install && cd ../frontend && yarn install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  }
}
